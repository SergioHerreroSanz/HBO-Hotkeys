{
  "name": "HBO Hotkeys",
  "description": "Add play, pause and more hotkeys to HBO player",
  "version": "0.2",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": [
        "https://es.hboespana.com/*",
        "https://play.hbonow.com/*",
        "https://play.hbogo.com/*"
      ],
      "js": ["contentScript.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icon.png"
  }
}
